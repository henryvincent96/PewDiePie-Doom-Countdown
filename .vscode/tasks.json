    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "pyinstaller",
            "args": [
                "pewdiepieDownfall.pyw",
                "-w"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build one-file",
            "type": "shell",
            "command": "pyinstaller",
            "args": [
                "pewdiepieDownfall.pyw",
                "-F",
                "-w"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher":"$msCompile"
        }
    ]
}